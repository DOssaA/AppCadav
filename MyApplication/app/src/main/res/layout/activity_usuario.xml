<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context="com.example.usuario.myapplication.UsuarioActivity">

    <include
        android:id="@+id/app_bar_usuario"
        layout="@layout/app_bar_usuario" />

    <ImageView
        android:id="@+id/titulo_usuario"
        android:layout_below="@+id/app_bar_usuario"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:background="@drawable/seccion_usuario"/>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/titulo_usuario"
        android:id="@+id/drawerListUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <!-- Boton + (float action button) -->
    <com.software.shell.fab.ActionButton
        android:id="@+id/action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        fab:type="DEFAULT"
        fab:button_color="@color/fab_material_grey_500"
        fab:button_colorPressed="@color/fab_material_grey_900"
        fab:image="@drawable/fab_plus_icon"
        fab:image_size="24dp"
        fab:shadow_color="#757575"
        fab:shadow_radius="1.0dp"
        fab:shadow_xOffset="0.5dp"
        fab:shadow_yOffset="1.0dp"
        fab:stroke_color="@color/fab_material_blue_grey_500"
        fab:stroke_width="1.0dp"
        fab:show_animation="@anim/fab_roll_from_down"
        fab:hide_animation="@anim/fab_roll_to_down"
        />

</RelativeLayout>
